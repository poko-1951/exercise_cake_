<h2>Sign up</h2>
<div class="container">
  <div class="row">
    <div class="col">
      <%= form_with model:@customer, url:customer_registration_path do |f| %>
        <%= render "publics/shared/error_messages", resource: resource %>

        <table class="table">
          <tbody>
            <tr>
              <th>名前</th>
              <th class="text-end">(姓)</th>
              <td>
                <div class="form_group">
                  <%= f.text_field :family_name_kanji, autofocus: true, autocomplete: "family_name_kanji" %>
                </div>
              </td>
              <th class="text-end">(名)</th>
              <td>
                <div class="form_group">
                  <%= f.text_field :first_name_kanji, autocomplete: "first_name_kanji" %>
                </div>
              </td>
            </tr>
            <tr>
              <th>フリガナ</th>
              <th class="text-end">(セイ)</th>
              <td>
                <div class="form_group">
                  <%= f.text_field :family_name_kana, autocomplete: "family_name_kana" %>
                </div>
              </td>
              <th class="text-end">(メイ)</th>
              <td>
                <div class="form_group">
                  <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
                </div>
              </td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <th></th>
              <td>
                <%= f.email_field :email, autocomplete: "email" %>
              </td>
              <th colspan="2"></th>
            </tr>
            <tr>
              <th>郵便番号（ハイフンなし）</th>
              <th></th>
              <td>
                <%= f.text_field :post_code %>
              </td>
              <th colspan="2"></th>
            </tr>
            <tr>
              <th>住所</th>
              <th></th>
              <td colspan="3">
                <%= f.text_field :address, style:"width:85%" %>
              </td>
            </tr>
            <tr>
              <th>電話番号</th>
              <th></th>
              <td>
                <%= f.text_field :phone_number, autocomplete: "off" %>
              </td>
              <th colspan="2"></th>
            </tr>
            <tr>
              <th>
                パスワード
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
              </th>
              <th></th>
              <td>
                <%= f.password_field :password, autocomplete: "new-password" %>
              </td>
              <th colspan="2"></th>
            </tr>
            <tr>
              <th>パスワード（確認用）</th>
              <th></th>
              <td>
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </td>
              <th colspan="2"></th>
            </tr>
            <tr>
              <th colspan="2"></th>
              <td>
                <%= f.submit "新規登録", class:"btn btn-success" %>
              </td>
              <th colspan="2"></th>
            </tr>
          </tbody>
        </table>
      <% end %>

      <%= render "publics/shared/links" %>
    </div>    
  </div>
</div>