<h2>注文情報入力</h2>
<h2>支払方法</h2>
<%= form_with model:@order, url: publics_confirm_path, method: :post do |f| %>
  <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %> <br>
  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
<h2>お届け先</h2>
  <%= f.radio_button :address_select, 0 %>
  <%= f.label :address_select, "自身の住所" %> <br>

  <%= f.radio_button :address_select, 1 %>
  <%= f.label :payment_method, "登録済みの住所" %> <br>
  <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %> <br>

  <%= f.radio_button :address_select, 2 %>
  <%= f.label :address_select, "新しいお届け先" %> <br>
  <%= f.label :post_code %>
  <%= f.text_field :post_code %> <br>
  <%= f.label :address %>
  <%= f.text_field :address %> <br>
  <%= f.label :address_name %>
  <%= f.text_field :address_name %> <br>
  <%= f.submit "確認画面へ進む", class:"btn btn-primary"%>
<% end %>

