<%= form_with model: @address, url:publics_addresses_path do |f| %>
  <div class="form-group">
    <%= f.label :post_code %>
    <%= f.text_field :post_code, class:"form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class:"form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :address_name %>
    <%= f.text_field :address_name, class:"form-control"%>
  </div>
  <div class="form-group">
    <%= f.submit "新規登録", class:"btn btn-success"%>
  </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.post_code %></td>
        <td><%= address.address %></td>
        <td><%= address.address_name %></td>
        <td><%= link_to "編集する", edit_publics_address_path(address) %></td>
      </tr>
    <% end %>
  </tbody>
</table>