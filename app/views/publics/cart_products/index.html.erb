<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_products.each do |cart_product|%>
    <tr>
      <td><%= cart_product.product.product_name %></td>
      <td><%= cart_product.product.price %></td>
      <td><%= cart_product.product_count %></td>
      <td><%= cart_product.product.price*cart_product.product_count %></td>
    </tr>
    <% end %>
  </tbody>
</table>
